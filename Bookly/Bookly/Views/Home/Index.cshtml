@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Welcome to Bookly!</h1>
    <p class="lead">Your solution to managing Customers, Books, and Book Rentals.</p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Manage Customers</h2>
        <p>
            Log in with administrative rights to create and edit Customers as a Store Manager. Not a Store Manager, log in to view the list of
            Customers.
        </p>
        <button class="btn btn-primary btn-lg">Customers</button>
    </div>
    <div class="col-md-4">
        <h2>Manage Books</h2>
        <p>
            Log in with administrative rights to create and edit Books as a Store Manager. Not a Store Manager, log in to view the list of
            Books.
        </p>
        <button class="btn btn-primary btn-lg">Books</button>
    </div>
    <div class="col-md-4">
        <h2>Create Rentals</h2>
        <p>Log in as a user with administrative or normal user rights and use the New Rental page to log Book rentals for a Customer.</p>
        <button class="btn btn-primary btn-lg">Rentals</button>
    </div>
</div>